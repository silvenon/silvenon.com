{
  "name": "silvenon.com",
  "description": "My personal website",
  "homepage": "https://silvenon.com",
  "author": {
    "name": "Matija MarohniÄ‡",
    "email": "matija.marohnic@gmail.com",
    "url": "https://silvenon.com"
  },
  "private": true,
  "sideEffects": false,
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/silvenon/silvenon.com.git"
  },
  "license": "MIT",
  "scripts": {
    "setup": "npm install && metronome patch @remix-run/serve && simple-git-hooks && npm run dotenv",
    "dotenv": "node node_modules/dotenv-safe/config.js",
    "generate:css": "tailwindcss --input ./tailwind.css --output ./app/tailwind.css",
    "generate:posts": "node -r esbuild-register scripts/compile-posts.ts",
    "dev": "run-s -l generate:posts && run-p -l dotenv dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:posts": "cross-env NODE_ENV=development npm run generate:posts",
    "dev:remix": "remix dev",
    "build": "run-s -l build:css && run-p -l build:posts build:remix",
    "build:css": "npm run generate:css -- --minify",
    "build:posts": "cross-env NODE_ENV=production npm run generate:posts",
    "build:remix": "remix build",
    "deploy": "fly deploy --remote-only",
    "start": "remix-serve build",
    "prelint": "eslint-config-prettier src/root.tsx src/__tests__/posts.test.ts",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --cache --cache-location ./node_modules/.cache/eslint",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev 3000 'cypress open'",
    "test:e2e:run": "npm run build && cross-env PORT=8811 start-server-and-test start 8811 'cypress run'",
    "typecheck": "tsc --build && tsc --build cypress",
    "validate": "run-p -l 'test -- --run' lint typecheck test:e2e:run",
    "validate:pre-push": "run-p -l 'test -- --run' lint typecheck"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintIgnore": [
    "/node_modules",
    "/app/posts",
    "/build",
    "/public/build"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged",
    "pre-push": "npm run validate:pre-push"
  },
  "nano-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "vitest related --run"
    ]
  },
  "dependencies": {
    "@gitgraph/core": "^1.5.0",
    "@heroicons/react": "^1.0.5",
    "@iconify/icons-entypo-social": "^1.1.0",
    "@metronome-sh/express": "^5.4.2",
    "@metronome-sh/react": "^5.4.2",
    "@remix-run/node": "^1.3.4",
    "@remix-run/react": "^1.2.2",
    "@remix-run/serve": "^1.2.2",
    "cloudinary-tiny-js": "^2.0.1",
    "clsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "date-fns": "^2.27.0",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "mdx-bundler": "^9.0.0",
    "micromark": "^3.0.10",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "tiny-invariant": "^1.2.0",
    "toml": "^3.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@gitgraph/js": "^1.4.0",
    "@iconify/react": "^3.1.3",
    "@remix-run/dev": "^1.2.2",
    "@remix-run/eslint-config": "^1.3.2",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/dotenv-safe": "^8.1.2",
    "@types/eslint": "^8.4.1",
    "@types/hast": "^2.3.4",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.10",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/testing-library__cypress": "^5.0.9",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.8.0",
    "@vitejs/plugin-react": "^1.2.0",
    "binode": "^1.0.5",
    "browserslist": "^4.19.1",
    "c8": "^7.11.0",
    "chokidar": "^3.5.3",
    "cloudinary": "^1.27.1",
    "cypress": "^9.5.2",
    "dotenv-safe": "^8.2.0",
    "esbuild": "^0.14.10",
    "esbuild-plugin-browserslist": "^0.4.3",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jsdom": "^19.0.0",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "rehype-pretty-code": "^0.3.1",
    "remark-smartypants": "^2.0.0",
    "remark-unwrap-images": "^3.0.1",
    "shiki": "^0.10.0",
    "simple-git-hooks": "^2.7.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.7",
    "type-fest": "^2.12.2",
    "typescript": "^4.5.4",
    "unist-util-visit": "^4.1.0",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "^0.12.6"
  }
}
