{
  "name": "silvenon.com",
  "description": "My personal website",
  "homepage": "https://silvenon.com",
  "author": {
    "name": "Matija MarohniÄ‡",
    "email": "matija.marohnic@gmail.com",
    "url": "https://silvenon.com"
  },
  "private": true,
  "sideEffects": false,
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/silvenon/silvenon.com.git"
  },
  "license": "MIT",
  "scripts": {
    "setup": "npm install && simple-git-hooks",
    "postinstall": "metronome patch @remix-run/serve",
    "generate:posts": "node -r esbuild-register scripts/compile-posts.ts",
    "pre:posts": "cross-env NODE_ENV=production npm run generate:posts",
    "dev": "run-s -l pre:posts && run-p -l dev:*",
    "dev:posts": "cross-env NODE_ENV=development npm run generate:posts",
    "dev:remix": "remix dev",
    "build": "run-p build:posts build:remix",
    "build:posts": "cross-env NODE_ENV=production npm run generate:posts",
    "build:remix": "remix build",
    "deploy": "fly deploy --remote-only",
    "start": "remix-serve build",
    "preview": "binode --require dotenv/config -- @remix-run/serve:remix-serve build",
    "prelint": "eslint-config-prettier src/root.tsx src/__tests__/posts.test.ts",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --cache --cache-location ./node_modules/.cache/eslint",
    "test": "run-p test:*",
    "test:unit": "vitest --run",
    "test:e2e": "playwright test --retries=2",
    "typecheck": "tsc --build && tsc --build integration",
    "validate": "run-s build && run-p test lint typecheck"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintIgnore": [
    "/node_modules",
    "/app/posts",
    "/build",
    "/public/build",
    "/playwright-report"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged",
    "pre-push": "npm run validate"
  },
  "nano-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "vitest related --run"
    ]
  },
  "dependencies": {
    "@gitgraph/react": "^1.6.0",
    "@heroicons/react": "^2.0.13",
    "@iconify/icons-entypo-social": "^1.1.0",
    "@iconify/react": "^4.0.1",
    "@metronome-sh/express": "^5.4.2",
    "@metronome-sh/react": "^5.4.2",
    "@react-hook/media-query": "^1.1.1",
    "@remix-run/node": "^1.3.4",
    "@remix-run/react": "^1.2.2",
    "@remix-run/serve": "^1.2.2",
    "cloudinary-tiny-js": "^2.0.1",
    "clsx": "^1.1.1",
    "date-fns": "^2.27.0",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "isbot": "^3.5.0",
    "mdx-bundler": "^9.0.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "tiny-invariant": "^1.2.0",
    "toml": "^3.0.0",
    "unorphan": "^1.2.1",
    "utterances-react-component": "^1.0.0"
  },
  "devDependencies": {
    "@gitgraph/core": "^1.5.0",
    "@playwright/test": "^1.22.2",
    "@remix-run/dev": "^1.2.2",
    "@remix-run/eslint-config": "^1.3.2",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/cacache": "^15.0.1",
    "@types/eslint": "^8.4.1",
    "@types/hast": "^2.3.4",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@vitejs/plugin-react": "^3.0.1",
    "@vitest/coverage-c8": "^0.28.4",
    "binode": "^1.0.5",
    "browserslist": "^4.19.1",
    "cacache": "^16.1.0",
    "chokidar": "^3.5.3",
    "cloudinary": "^1.27.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "esbuild": "^0.17.4",
    "esbuild-plugin-browserslist": "^0.7.0",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.1.0",
    "jsdom": "^21.0.0",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "rehype-pretty-code": "^0.9.0",
    "remark-smartypants": "^2.0.0",
    "remark-unwrap-images": "^3.0.1",
    "shiki": "^0.14.0",
    "simple-git-hooks": "^2.7.0",
    "tailwindcss": "^3.1.2",
    "typescript": "^4.5.4",
    "unist-util-visit": "^4.1.0",
    "vite-tsconfig-paths": "^4.0.3",
    "vitest": "^0.28.4"
  }
}
