{
  "name": "silvenon.com",
  "description": "My personal website",
  "homepage": "https://silvenon.com",
  "author": {
    "name": "Matija MarohniÄ‡",
    "email": "matija.marohnic@gmail.com",
    "url": "https://silvenon.com"
  },
  "private": true,
  "sideEffects": false,
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/silvenon/silvenon.com.git"
  },
  "license": "MIT",
  "scripts": {
    "prepare": "simple-git-hooks",
    "postinstall": "remix setup node",
    "css": "tailwindcss --input ./tailwind.css --output ./app/tailwind.css",
    "dev": "npm-run-all build:css --parallel dev:*",
    "dev:css": "npm run css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development node -r dotenv-safe/config node_modules/.bin/remix dev",
    "prelint": "eslint-config-prettier src/root.tsx src/__tests__/posts.test.ts",
    "lint": "eslint . --report-unused-disable-directives",
    "test": "jest",
    "build": "npm-run-all build:css build:remix",
    "build:css": "npm run css -- --minify",
    "build:remix": "cross-env NODE_ENV=production remix build"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged",
    "pre-push": "npx tsc"
  },
  "nano-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "jest --findRelatedTests"
    ],
    "vercel.*": [
      "node scripts/vercel.mjs",
      "git add vercel.json"
    ]
  },
  "dependencies": {
    "@gitgraph/react": "^1.6.0",
    "@headlessui/react": "^1.4.2",
    "@iconify/icons-bx": "^1.1.4",
    "@iconify/icons-dashicons": "^1.1.0",
    "@iconify/icons-entypo-social": "^1.1.0",
    "@iconify/icons-mdi": "^1.1.42",
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "@remix-run/vercel": "^1.1.1",
    "browserslist": "^4.19.1",
    "cloudinary": "^1.27.1",
    "cloudinary-tiny-js": "^2.0.1",
    "clsx": "^1.1.1",
    "date-fns": "^2.27.0",
    "downshift": "^6.1.7",
    "esbuild": "^0.14.10",
    "esbuild-plugin-browserslist": "^0.4.3",
    "feed": "^4.2.2",
    "fuzzaldrin-plus": "^0.6.0",
    "gray-matter": "^4.0.3",
    "mdx-bundler": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-twitter-widgets": "^1.10.0",
    "rehype-pretty-code": "^0.2.2",
    "remark-smartypants": "^2.0.0",
    "remark-unwrap-images": "^3.0.1",
    "remix": "^1.1.1",
    "shiki": "^0.10.0",
    "tiny-invariant": "^1.2.0",
    "unorphan": "^1.2.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.5",
    "@iconify/react": "^3.1.3",
    "@remix-run/dev": "^1.1.1",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/fuzzaldrin-plus": "^0.6.2",
    "@types/hast": "^2.3.4",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.8.0",
    "cross-env": "^7.0.3",
    "dotenv-safe": "^8.2.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.4.5",
    "jest-config": "^27.4.5",
    "nano-staged": "^0.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "simple-git-hooks": "^2.7.0",
    "tailwindcss": "^3.0.7",
    "toml": "^3.0.0",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  }
}
