{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "types": ["node"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2019",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["../types", "../node_modules/@types"],
  },
  "exclude": [
    "../node_modules/@types/jest",
    "../node_modules/@testing-library/jest-dom"
  ],
  "include": [
    "**/*.ts",
  ],
}
